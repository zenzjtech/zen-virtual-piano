{
  "name": "zen-virtual-piano",
  "version": "1.0.0",
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview -- --no-sandbox",
    "dev": "electron-vite dev -- --no-sandbox",
    "build": "cross-env DEBUG=electron-builder:* electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win-docker": "docker build -t zen-piano-builder . && docker run --rm -v $(pwd):/app zen-piano-builder",
    "build:mac": "VITE_BUILD_CHANNEL=standalone electron-vite build && electron-builder --mac",
    "build:win": "VITE_BUILD_CHANNEL=standalone electron-vite build && electron-builder --win",
    "build:win-ns": "VITE_BUILD_CHANNEL=standalone electron-vite build && electron-builder --win nsis",
    "build:win-appx": "VITE_BUILD_CHANNEL=msstore electron-vite build && electron-builder --win appx",
    "build:linux": "VITE_BUILD_CHANNEL=snap electron-vite build && electron-builder --linux",
    "publish:linux": "electron-vite build && electron-builder --linux snap -p always",
    "publish:linux:edge": "electron-vite build && electron-builder --linux snap -p always -c.snap.publish.channels=edge"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.3.9",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@vitejs/plugin-react": "^5.0.3",
    "cross-env": "^10.1.0",
    "electron": "38.1.2",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "vite": "^7.1.6"
  }
}
